<resources>

        <style name="progress_dialog" parent="@android:style/Theme.Dialog">
            <item name="android:windowFrame">@null</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:windowIsTranslucent">true</item>
            <item name="android:windowNoTitle">true</item>
            <item name="android:background">@null</item>
            <item name="android:windowBackground">@null</item>
            <item name="android:backgroundDimEnabled">false</item>
        </style>


    <style name="mySwitch" parent="Theme.AppCompat.Light">
        <!-- switch 打开时的按钮的颜色 轨迹颜色默认为30%（看效果就明白30%是怎么回事了）这个颜色 -->
        <item name="colorControlActivated">#FF4081</item>
        <!--  switch关闭时的按钮的颜色 -->
        <item name="colorSwitchThumbNormal">#FFF</item>
        <!-- switch关闭时的轨迹的颜色 30%这个颜色 -->
        <item name="android:colorForeground">#D3D3D3</item>

    </style>

    <style name="ShowPhotoResult" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimaryDark">#384A56</item>

    </style>

    <style name="login" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#000</item>
        <item name="colorPrimaryDark">#90000000</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="Discuss" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#FF4081</item>
        <item name="colorPrimaryDark">#D3D3D3</item>

    </style>


    <style name="AppTheme.main" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>


    </style>

    <style name="FruitActivityTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item><!--设置这个手势滑动的时候就不会变黑 ，具体查看git-->
        <item name="android:windowAnimationStyle">@style/SlideRightAnimation</item>

    </style>

    <style name="AppTheme.translucent">
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.search" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#00000000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="FlowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">#9A9A9A</item>
        <item name="item_backgroundColor">#1E1E1E</item>
        <item name="item_selectedTextColor">#000000</item>
        <item name="item_selectedBackgroundColor">#ffffff</item>
        <item name="item_radius">5dp</item>
        <item name="item_strokeColor">#939393</item>
        <item name="item_selectedStrokeColor">#939393</item>
        <item name="item_strokeWidth">1px</item>
        <item name="item_horizontalSpacing">3dp</item>
        <item name="item_horizontalPadding">5dp</item>
        <item name="item_verticalPadding">5dp</item>
        <item name="item_width">111</item>
        <item name="item_height">30</item>
        <item name="item_maxEms">5</item>
        <item name="item_multiChooseable">true</item>
    </style>

    <style name="FlowLayout1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="item_textColor">#9A9A9A</item>
        <item name="item_backgroundColor">#1E1E1E</item>
        <item name="item_selectedTextColor">#000000</item>
        <item name="item_selectedBackgroundColor">#ffffff</item>
        <item name="item_radius">5dp</item>
        <item name="item_strokeColor">#939393</item>
        <item name="item_selectedStrokeColor">#939393</item>
        <item name="item_strokeWidth">1px</item>
        <item name="item_horizontalSpacing">10dp</item>
        <item name="item_horizontalPadding">5dp</item>
        <item name="item_verticalPadding">5dp</item>
        <item name="item_width">168</item>
        <item name="item_height">30</item>
        <item name="item_maxEms">5</item>
        <item name="item_multiChooseable">true</item>
    </style>
</resources>
