<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shmily.tjz.swap.VerifyMobActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"

    android:layout_height="?attr/actionBarSize">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="验证手机号"
        android:textColor="#FFF"
        android:textSize="15sp"
        />
</LinearLayout>
    <TextView
        android:id="@+id/verify_mob_text"
        android:layout_marginTop="15dp"
android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <LinearLayout
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="3"
            android:id="@+id/verify_mob_edit"
            android:background="@drawable/bg_edittext_normal"
            android:hint="请输入您的手机号"
            android:paddingLeft="10dp"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:cursorVisible="false"

            />

  <Button
      android:layout_width="0dp"
      android:layout_weight="1"
      android:gravity="center"
android:text="获取验证码"
      android:id="@+id/verify_mob_get"
      android:layout_height="match_parent"
android:textColor="#58B6ED"
      android:background="@drawable/bg_edittext_normal"


      />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/verify_mob_ma_edit"
            android:background="@drawable/bg_edittext_normal"
            android:hint="请输入您的验证码"
            android:paddingLeft="10dp"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:cursorVisible="false"

            />

        </LinearLayout>

    <Button
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:background="#5A87E4"
        android:textSize="15dp"
        android:id="@+id/verify_mob_next"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="57dp" />

</LinearLayout>
