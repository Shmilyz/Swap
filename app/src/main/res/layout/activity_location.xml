<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.shmily.tjz.swap.Rubbish.LocationActivity">

    <com.baidu.mapapi.map.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bmapView"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout" />

    <ezy.ui.view.RoundButton
        android:layout_width="400dp"
        android:layout_height="48dp"
        android:text="下  一  步"
        android:id="@+id/weather"
        app:btnCornerRadius="8dp"
        app:btnSolidColor="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Position"
        android:layout_alignStart="@+id/Position"
        android:layout_alignRight="@+id/Position"
        android:layout_alignEnd="@+id/Position" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/position_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            />

    </LinearLayout>

    <ezy.ui.view.RoundButton
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:text="定         位"
        android:id="@+id/Position"
        app:btnCornerRadius="8dp"
        app:btnSolidColor="#000000"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/weather"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
