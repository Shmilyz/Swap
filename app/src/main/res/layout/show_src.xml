<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pla="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="6dp"
        android:background="#F4F4F4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:textSize="12sp"
        >
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:text="买家留言"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="3dp"
            android:layout_marginTop="9dp"
            >
            <LinearLayout
                android:id="@+id/dicuss_user"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/discuss_headimage"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/discuss_username"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/icon_image"
                    android:layout_marginLeft="16dp"
                    />
            </LinearLayout>

          <TextView
              android:layout_marginLeft="16dp"
              android:layout_marginRight="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/discuss_discuss"
              android:textSize="13sp"
              android:layout_marginTop="17dp"
            android:layout_below="@+id/dicuss_user"
              android:text="为该商品添加第一条留言吧！"
              />

        </RelativeLayout>


            <ezy.ui.view.RoundButton
                android:layout_marginTop="13dp"
                android:layout_below="@id/discuss_discuss"
                android:layout_width="90dp"
                android:layout_height="25dp"
                app:btnStrokeWidth="0.5dp"
                android:text="查看全部留言"
                android:id="@+id/discuss"
                app:btnCornerRadius="10dp"
                app:btnStrokeColor="#42DEB7"
                android:textSize="12sp"
                android:textColor="#42DEB7"
                android:layout_gravity="center"
                />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_height="40dp"
        android:background="#F4F4F4"
        android:textSize="20sp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/line"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="详情"
                android:textColor="#bfbfbf"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/line"
                android:layout_gravity="center"
                />
        </LinearLayout>


    </LinearLayout>
  <!--  <com.huewu.pla.lib.MultiColumnListView
        android:background="#FFFFFF"
        android:id="@+id/show_sec_list"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        pla:plaColumnNumber="2"
        pla:plaLandscapeColumnNumber="2">
    </com.huewu.pla.lib.MultiColumnListView>-->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/show_sec_list"
        android:background="#FFFFFF"

        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_height="40dp"
        android:background="#F4F4F4"
        android:textSize="20sp">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/line"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="推荐"
                android:textColor="#bfbfbf"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/line"
                android:layout_gravity="center"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/show_src_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </LinearLayout>
</LinearLayout>
