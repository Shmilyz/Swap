<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
android:scrollbars="none"    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
 >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in_text"
        >
        <include layout="@layout/release_pthoto_nest"/>

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F1F2F4"
        android:layout_below="@id/in_text"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in_select"
        android:layout_below="@id/in_text"
        >
        <include layout="@layout/release_text_nest"></include>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F1F2F4"
        android:layout_below="@id/in_text"
        ></LinearLayout>
<LinearLayout
    android:layout_below="@id/in_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/in_pthoto"

  >
    <include layout="@layout/release_select_nest"/>

</LinearLayout>



</LinearLayout>
</ScrollView>