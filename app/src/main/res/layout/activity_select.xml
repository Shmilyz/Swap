<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shmily.tjz.swap.SelectActivity">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:id="@+id/clear_all"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9A9A9A"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />
    <com.ihidea.multilinechooselib.MultiLineChooseLayout
        android:id="@+id/flowLayout"
        style="@style/FlowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </com.ihidea.multilinechooselib.MultiLineChooseLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9A9A9A"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp" />
    <com.ihidea.multilinechooselib.MultiLineChooseLayout
        android:id="@+id/flowLayout1"
        style="@style/FlowLayout1"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        />
  <!--  <com.ihidea.multilinechooselib.MultiLineChooseLayout
        android:id="@+id/flowLayout2"
        style="@style/FlowLayout"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        />-->
    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/rangeSeekbar1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        app:min_value="0"
        app:max_value="1500"
        app:bar_color="#9A9A9A"
        app:bar_highlight_color="#FFFFFF"
        app:left_thumb_image="@mipmap/seek"
        app:right_thumb_image="@mipmap/seek"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="320dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:button="@null"
            android:background="@drawable/checkbox_nike"
            android:id="@+id/checkbox_nike"
            />
        <CheckBox
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:button="@null"
            android:background="@drawable/checkbox_airjordan"
            android:id="@+id/checkbox_airjordan"

            />
        <CheckBox
            android:layout_width="85dp"
            android:layout_height="60dp"
        android:button="@null"
        android:background="@drawable/checkbox_converse"
            android:id="@+id/checkbox_converse"

            />
        <CheckBox
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:button="@null"
            android:background="@drawable/checkbox_newbalance"
            android:id="@+id/checkbox_newbalance"

            />
        <CheckBox
            android:layout_width="85dp"
            android:layout_height="60dp"
        android:button="@null"
        android:background="@drawable/checkbox_puma"
            android:id="@+id/checkbox_puma"

            />
        <CheckBox
            android:layout_width="85dp"
            android:layout_height="60dp"
        android:button="@null"
        android:background="@drawable/checkbox_vans"
            android:id="@+id/checkbox_vans"

            />
    </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="420dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
        <CheckBox
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:button="@null"
            android:background="@drawable/checkbox_basketball"
            android:id="@+id/checkbox_basketball"

            />
        <CheckBox
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:button="@null"
            android:background="@drawable/checkbox_running"
            android:layout_marginLeft="50dp"
            android:id="@+id/checkbox_running"

            />

        <CheckBox
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:button="@null"
            android:background="@drawable/checkbox_skateboar"
            android:id="@+id/checkbox_skateboar"
            android:layout_marginLeft="53dp"

            />
    </LinearLayout>
    <ezy.ui.view.RoundButton
        android:layout_marginTop="550dp"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:text="搜         索"
        android:id="@+id/Position"
        app:btnCornerRadius="1dp"
        app:btnSolidColor="#FFFFFF"
        android:textColor="#000000"
        android:layout_above="@+id/weather"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left"
        android:text="aaa"

        android:textColor="#ffffff"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/rangeSeekbar1"
        android:layout_alignLeft="@+id/Position"
        android:layout_alignStart="@+id/Position"
        android:layout_marginLeft="11dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right"
        android:text="aaa"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/left"
        android:layout_alignBottom="@+id/left"
        android:layout_alignRight="@+id/Position"
        android:layout_alignEnd="@+id/Position"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />
</RelativeLayout>
