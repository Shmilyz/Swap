<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.shmily.tjz.swap.BuyActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="#FFF"
            android:background="@color/colorPrimary"
            android:id="@+id/specoal_show_title"
            />
        <LinearLayout
            android:background="#FD5E62"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iconfontshunfeng"
                />
          <TextView
              android:layout_width="wrap_content"
              android:layout_marginLeft="30dp"
              android:layout_height="match_parent"
              android:gravity="center"
              android:text="点击查看快递运输详情"
              android:textColor="#FFF"

              />

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/buy_case_lin"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dingwei"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/show_buy_info_pos"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="13dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"
            ></LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:background="#FFF"

                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:paddingTop="10dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/buy_info_headimage"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/buy_info_headimage"
                        android:id="@+id/buy_info_username"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="#FAFAFA"
                    android:layout_width="match_parent"
                    android:layout_height="83dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/buy_info_shoesimage"
                        />
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buy_info_shoesname"
                        android:layout_toRightOf="@id/buy_info_shoesimage"
                        android:textSize="15sp"
                        android:layout_marginLeft="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/buy_info_shoesimage"
                        android:layout_alignParentBottom="true"
                        android:textSize="15sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="#EC5E2A"
                        android:id="@+id/buy_info_price"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"

                        android:text="宝贝型号: "
                        android:id="@+id/buy_info_bbxh"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/buy_info_shoesmodle"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"

                        android:gravity="center"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#FAFAFA"
                    android:layout_height="1dp">

                </LinearLayout>
                <RelativeLayout

                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="配送方式: "
                        android:textSize="15sp"

                        android:id="@+id/buy_info_kd"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/buy_info_feiyong"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"
                        android:text="顺丰快递"
                        android:gravity="center"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#FAFAFA"
                    android:layout_height="1dp">

                </LinearLayout>
                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="您的留言: "
                        android:id="@+id/buy_info_ly"
                        />

                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="6dp"
                        android:id="@+id/buy_info_leave"
                        android:layout_alignParentRight="true"
                        android:layout_toEndOf="@+id/buy_info_ly"
                        android:textSize="13sp"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#FAFAFA"
                    android:layout_height="1dp">

                </LinearLayout>

                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"

                        android:text="订单编号: "
                        android:id="@+id/buy_info_ddbh"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/buy_info_shoesddbh"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"

                        android:gravity="center"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#FAFAFA"
                    android:layout_height="1dp">

                </LinearLayout>

                <RelativeLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="15sp"

                        android:text="下单日期: "
                        android:id="@+id/buy_info_xdrq"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/buy_info_shoesdate"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp"

                        android:gravity="center"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#FAFAFA"
                    android:layout_height="1dp">

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>